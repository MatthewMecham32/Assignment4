@{
    ViewBag.Title = "Suggestion Page";
}
@model Assignment4.Models.RestaurantSuggestions


<div class="w-50 mx-auto"><!--Form to submit suggestions-->
    <form asp-action="Suggestions" method="post">
        <div asp-validation-summary="All">
            <div>
                <label asp-for="Name">Name: </label>
                <input asp-for="Name" />
            </div>
            <div>
                <label asp-for="RestaurantName">Restaurant Name: </label>
                <input asp-for="RestaurantName" />
            </div>
            <div>
                <label asp-for="FavoriteDish">Favorite Dish: </label>
                <input asp-for="FavoriteDish" />
            </div>
            <div>
                <label asp-for="Phone">Phone </label>
                <input asp-for="Phone" />
            </div>
            <button type ="submit">Submit your suggestion</button>


        </div>
    </form>
</div>